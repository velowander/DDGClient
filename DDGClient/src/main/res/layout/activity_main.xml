<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/wordSearchCaption"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/editTextSearchWord"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/buttonSearchCaption"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickRunQuery"
        android:paddingBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="@string/queryStringCaption"
        android:layout_weight="0.5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/queryStringResult"
        android:id="@+id/textViewQuery"
        android:layout_weight="1"
        android:paddingBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="@string/definitionCaption"
        android:layout_weight="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/definitionResult"
        android:id="@+id/textViewDefinition"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="@string/definitionURLCaption"
        android:layout_weight="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/definitionURLResult"
        android:id="@+id/textViewDefinitionURL"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Result"
        android:id="@+id/textViewResult"
        android:layout_weight="5"/>

</LinearLayout>